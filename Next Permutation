
class Solution {
public:
    void nextPermutation(int nums[], int n) {
        int i, j;
        for(i=n-2;i>=0;i--){
            if(nums[i]<nums[i+1])
                break;
        }
        if(i<0){
            reverse(nums,nums+n);
        }else{
            for(j=n-1;j>i;j--){
                if(nums[j]>nums[i]){
                    break;
                }
            }
            swap(nums[i],nums[j]);
            reverse(nums+i+1,nums+n);
        }
    }
};
